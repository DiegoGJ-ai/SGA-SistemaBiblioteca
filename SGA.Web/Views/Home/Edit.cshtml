@using SGA.Model.Requests
@model CrearLibroRequest

@{
    ViewData["Title"] = "Editar libro";
    var id = (int)ViewBag.LibroId;
}

<h1>Editar libro</h1>

<form asp-action="Edit" asp-route-id="@id" method="post">
    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AutorId"></label>
        <input asp-for="AutorId" class="form-control" />
        <span asp-validation-for="AutorId" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
