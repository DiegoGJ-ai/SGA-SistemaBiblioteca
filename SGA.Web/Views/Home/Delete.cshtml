@using SGA.Model.Dtos
@model LibroDto

@{
    ViewData["Title"] = "Eliminar libro";
}

<h1>Eliminar libro</h1>

<div class="alert alert-warning">
    ¿Seguro que deseas eliminar este libro?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">AutorId</dt>
        <dd class="col-sm-10">@Model.AutorId</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
