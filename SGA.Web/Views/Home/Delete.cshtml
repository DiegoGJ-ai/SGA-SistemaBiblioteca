@model SGA.Model.Dtos.LibroDto

@{
    ViewData["Title"] = "Eliminar libro";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">¿Seguro que deseas eliminar este libro?</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-3">Id</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Título</dt>
                    <dd class="col-sm-9">@Model.Titulo</dd>

                    <dt class="col-sm-3">AutorId</dt>
                    <dd class="col-sm-9">@Model.AutorId</dd>
                </dl>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            Eliminar definitivamente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
